<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical">

    <TextView
        android:text="Login Account"
        android:layout_width="153dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="28dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:textColor="#D8C690"
        android:gravity="top"
        android:textSize="20sp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="128dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="177dp"
            android:text="Phone Number"
            android:textSize="16sp"
            android:textColor="#9A825F"
            android:gravity="top"/>



        <View
            android:id="@+id/line_1"
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="98dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="211dp"
            android:background="@drawable/login_line_1"
            />

        <View
            android:layout_width="288dp"
            android:layout_height="37dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="36dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="211dp"
            android:background="@drawable/login_rectangle_1"
            />


        <EditText
            android:layout_width="103dp"
            android:layout_height="16dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="117dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="220dp"
            android:hint="+919090909090"
            android:textColorHint="#9A825F"
            android:textSize="13sp"
            android:textColor="#9A825F"
            android:gravity="top"
            />


        <View
            android:layout_width="226dp"
            android:layout_height="49dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="62dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="376dp"
            android:background="@drawable/login_rectangle_2"
            />



        <TextView
            android:layout_width="102dp"
            android:layout_height="23dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="124dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="389dp"
            android:text="Request OTP"
            android:textSize="17sp"
            android:textColor="#000000"
            android:gravity="top"
            />




    </RelativeLayout>






    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number:"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="+12222222222"
            android:id="@+id/phoneNumber"
            android:inputType="phone"/>

    </LinearLayout>





    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:id="@+id/codeLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Code"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="222222"
            android:id="@+id/verificationCode"
            android:inputType="number" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSend"
        android:text="Send"
        android:background="@drawable/login_rectangle_2"/>


</RelativeLayout>


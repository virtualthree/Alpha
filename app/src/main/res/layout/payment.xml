<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maroon">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donation"
        android:textColor="@color/gold3"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="45dp"
        android:id="@+id/donation"/>
    <TextView
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:text="THANK YOU!!"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/gold"
        android:layout_below="@+id/donation"
        android:layout_marginTop="103dp"
        android:id="@+id/thankyouView"
        android:layout_centerInParent="true"/>
    <TextView
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:text="Thankyou for donating amount for those who can't afford this resources"
        android:textColor="@color/gold"
        android:textAlignment="center"
        android:layout_below="@+id/thankyouView"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="110dp"
        android:id="@+id/thankyouText"/>
    <EditText
        android:layout_width="238dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/gold3"
        android:layout_below="@+id/thankyouText"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="90dp"
        android:inputType="number"
        android:hint="Please enter the amount"
        android:textSize="12dp"
        android:padding="10dp"
        android:textColorHint="@color/gold"
        android:id="@+id/amountEt"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/payBtn"
        android:layout_width="226dp"
        android:layout_height="50dp"
        android:layout_below="@+id/amountEt"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_button_background"
        android:text="Donate"
        android:textColor="@color/black"
        android:textSize="18dp" />



</RelativeLayout>